{{=<% %>=}}

<!doctype html>
<meta name="viewport" content="width=device-width, initial-scale=1">
<html lang="en">

<head>
    <script src="https://cdn.jsdelivr.net/npm/vue"></script>
    <%> header-head %>
</head>

<body class="bg-gr">

<img src="/static/wanderer.png" alt="wanderer" class="po-f img-wanderer-2 op-7 sm-no">

<div id="app" v-cloak>

    <!-- PAGE BORDER -->

    <div class="border-t"></div>
    <div class="border-l"></div>
    <div class="border-r"></div>
    <div class="border-b"></div>

    <!-- HEADER -->

    <div class="navbar">
        <a href="/">
            <img href="index.html" src="/static/pr-logo.svg" alt="logo">
        </a>
        <div class="p c-off-white fl-r">
            <%> header-login %>
        </div>
    </div>

    <section class="grid-center">
        <!-- CYCLE TITLE -->

        <div class="col-4_sm-11 mt-10" data-push-left="off-0_sm-1">
            <div>
                <div class="title-xs i c-off-white">cycle {{result.cycle.number}}</div>
                <div class="title-xl c-off-white mt-05">{{result.cycle.englishTitle}}</div>
                <div class="title-sm c-off-white mt-05">{{result.cycle.germanTitle}}</div>
            </div>

            <img src="/static/sol.png" alt="sol" class="img-sol">

            <!-- SC INFO -->
            <div class="c-off-white sm-hidden mt-10" style="bottom: 0">
                <div class="mb-05"><i class="fas fa-rss"></i><a href="http://feeds.feedburner.com/PerryRhodanSummaries" class="p c-off-white td-n ml-05">PerryRhodanSummaries</a></div>
                <div><i class="fab fa-twitter"></i><a href="http://twitter.com/PerryRhodanUS" class="p c-off-white td-n ml-05">PerryRhodanUS</a></div>
                <p class="c-off-white mt-15">Created in Kotlin by <a href="mailto:cedric@beust.com" class="c-off-white">CÃ©dric Beust</a></p>
            </div>
        </div>


        <!-- TITLES -->

        <div class="col-6_sm-11 mt-8 mb-10">
            <table class="t-titles">
                <tr class="csr-p" v-for="book in result.books">
                    <td class="title-xs c-off-white i ta-r va-t">{{book.numberString}}</td>
                    <td class="pl-2">
                        <a href="summary.html" class="a-titles">
                            <div class="title-xs c-off-white i mb-05">by {{book.bookAuthor}}</div>
                            <div class="title c-yellow">{{book.englishTitle}}</div>
                            <div class="title-sm c-yellow">{{book.germanTitle}}</div>
                        </a>
                    </td>
                </tr>
            </table>
        </div>

        <%> navigation %>
    </section>

</div>

</body>
<script src="/static/js/displayCycle.js"></script>
</html>
