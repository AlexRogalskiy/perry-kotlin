{{=<% %>=}}
<html>

<head>
    <%> header-head %>
</head>
<body style="margin-bottom:50px">

<div id="app" v-cloak>
    <%> header-login %>

    <div id="page-container">
        <div>
            <p align="center">
                <span class="number">{{result.summary.number}}</span>
                - <span class="german-title">{{result.summary.germanTitle}}</span>
                <br>
                <span class="english-title">{{result.summary.englishTitle}}</span>
                <br>
                <span class="author">{{result.summary.bookAuthor}}</span>
            </p>

            <table width="70%" align="center">
                <tr>
                    <td><div class="summary" v-html="result.summary.text"></div></td>
                    <td>
                        <a v-bind:href="'/api/covers/' + result.summary.number">
                            <img width="200px" v-bind:src="'/api/covers/' + result.summary.number" />
                        </a>
                    </td>
                </tr>
            </table>

            <p align="right">
                <span class="author">{{result.summary.authorName}}</span>
                <span class="date">{{result.summary.date}}</span>
            </p>

            <table align="center" width="50%" border="0">
                <tr>
                    <%#bannerInfo.username%>
                    <td align="center">
                        <a v-bind:href="'/summaries/' + result.summary.number + '/edit'">Edit this summary</a>
                        &nbsp; | &nbsp
                        <a class="c-off-white" v-bind:href="result.perryPedia">PerryPedia</a>
                    </td>
                    <%/bannerInfo.username%>
                </tr>
            </table>
        </div>
        <%> navigation %>
    </div>

</div>

</body>
<script src="/static/js/displaySummary.js"></script>
<html>

