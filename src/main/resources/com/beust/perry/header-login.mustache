<div class="navbar grid-middle">
    <a href="index.html">
        <img href="index.html" src="/static/pr-logo.svg" alt="logo">
    </a>
    <div class="p c-off-white col ta-r">
        <!--<a href="#" class="c-off-white td-n a-bb-offwhite">Create account</a>
            <a href="#" class="c-off-white td-n a-bb-offwhite">Sign in</a> -->

        {{#bannerInfo.username}}
            <b>{{bannerInfo.username}}</b> |
            <a class="c-off-white td-n a-bb-offwhite" href="/logout">Logout</a>
        {{/bannerInfo.username}}

        {{#bannerInfo.adminText}}
            | <a class="c-off-white td-n a-bb-offwhite" href="/admin">{{bannerInfo.adminText}}</a>
        {{/bannerInfo.adminText}}

        {{^bannerInfo.username}}
            <div id="login" style="float:right">
                <a class="c-off-white td-n a-bb-offwhite" href="#" onclick="openForm()">Login</a>
            </div>
            <div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
                 aria-hidden="true" style="display:none; float:right;">
                <div class="modal-dialog">
                    <div class="loginmodal-container">
                        <form action="/api/login" method="post">
                            <input type="text" name="username" placeholder="Username">
                            <input type="password" name="password" placeholder="Password">
                            <input type="submit" name="login" class="login loginmodal-submit" value="Login" onclick="closeForm()">
                        </form>
                    </div>
                </div>
            </div>
        {{/bannerInfo.username}}
    </div>
</div>





