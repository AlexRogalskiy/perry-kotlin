<html>

<head>
    <script src="https://cdn.jsdelivr.net/npm/vue"></script>
</head>
<body>
<h1>Perry Rhodan English summaries</h1>

<div id="app">
    <template v-if="allCycles.username">
        <label>{{allCycles.username}}</label>
        <a href="#" onclick="logout()">Log out</a>
    </template>
    <template v-else>
        <a href="/api/login">Login</a>
    </template>

    <table>
        <thead>
            <td>Number</td>
            <td>Issues</td>
            <td>German title</td>
            <td>English title</td>
        </thead>
        {{#cycles}}
        <tr>
            <td>{{number}}</td>
            <td>{{start}}-{{end}}</td>
            <td>{{germanTitle}}</td>
            <td><a href="{{href}}">{{englishTitle}}</a></td>
        </tr>
        {{/cycles}}
    </table>

</div>
<p>
    <hr width="100%"/>
    Created by <a href="mailto:cedric@beust.com">Cedric Beust</a>
</p>
</body>
<script src="/static/js/common.js"></script>
<script src="/static/js/allCycles.js"></script>
